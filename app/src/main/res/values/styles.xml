<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MySplash" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- 定义启动背景布局 -->
        <item name="android:windowBackground">@drawable/splash_icon</item>
    </style>
    <style name="MainAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/guowanggreen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
